{
    "enable_white_list_groups": {
        "description": "启用群聊白名单",
        "type": "bool",
        "hint": "开启后只有在白名单的群聊才启用点赞功能",
        "default": false
    },
    "white_list_groups": {
        "description": "群聊白名单",
        "type": "list",
        "hint": "只有在白名单的群聊才启用点赞功能, 若没填写则默认全部群聊可用",
        "default": []
    },
    "subscribed_users": {
        "description": "订阅点赞的用户",
        "type": "list",
        "hint": "此变量用来存储订阅点赞用户的Q号",
        "default": []
    },
    "zanwo_date": {
        "description": "点赞日期",
        "type": "string",
        "hint": "如果检测到当前日期与点赞日期不同时，则触发自动点赞，并更新点赞日期",
        "invisible": true,
        "default": "2025-01-01"
    },
    "auto_like_enabled": {
        "description": "启用自动点赞",
        "type": "bool",
        "hint": "是否启用每日自动点赞功能",
        "default": true
    },
    "likes_per_user": {
        "description": "每人点赞次数",
        "type": "int",
        "hint": "给每个用户点赞的次数",
        "default": 20
    },
    "auto_like_time": {
        "description": "每日打卡时间",
        "type": "string",
        "hint": "格式：HH:MM:SS，例如 08:00:00",
        "default": "09:00:00"
    },
    "notify_groups": {
        "description": "通知群组列表",
        "type": "list",
        "hint": "自动点赞开始和完成时会发送通知到这些群组",
        "default": []
    },
    "notify_delay": {
        "description": "通知发送延迟",
        "type": "int",
        "hint": "发送群通知之间的延迟时间（秒），用于防止消息发送过快",
        "default": 1
    }
}